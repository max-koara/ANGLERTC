# ANGLE CMake config file
#
# This file sets the following variables:
# ANGLE_FOUND - Always TRUE.
# ANGLE_INCLUDE_DIRS - Directories containing the ANGLE include files.
# ANGLE_IDL_DIRS - Directories containing the ANGLE IDL files.
# ANGLE_LIBRARIES - Libraries needed to use ANGLE.
# ANGLE_DEFINITIONS - Compiler flags for ANGLE.
# ANGLE_VERSION - The version of ANGLE found.
# ANGLE_VERSION_MAJOR - The major version of ANGLE found.
# ANGLE_VERSION_MINOR - The minor version of ANGLE found.
# ANGLE_VERSION_REVISION - The revision version of ANGLE found.
# ANGLE_VERSION_CANDIDATE - The candidate version of ANGLE found.

message(STATUS "Found ANGLE-@PROJECT_VERSION@")
set(ANGLE_FOUND TRUE)

find_package(<dependency> REQUIRED)

#set(ANGLE_INCLUDE_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@"
#    ${<dependency>_INCLUDE_DIRS}
#    )
#
#set(ANGLE_IDL_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@/idl")
set(ANGLE_INCLUDE_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@"
    ${<dependency>_INCLUDE_DIRS}
    )
set(ANGLE_IDL_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@/idl")


if(WIN32)
    set(ANGLE_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_STATIC_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
else(WIN32)
    set(ANGLE_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_SHARED_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
endif(WIN32)

set(ANGLE_DEFINITIONS ${<dependency>_DEFINITIONS})

set(ANGLE_VERSION @PROJECT_VERSION@)
set(ANGLE_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(ANGLE_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(ANGLE_VERSION_REVISION @PROJECT_VERSION_REVISION@)
set(ANGLE_VERSION_CANDIDATE @PROJECT_VERSION_CANDIDATE@)

